    "sinon": "^9.2.3",
    "spinnies": "^0.5.1",
    "ssh2": "^0.8.9",
    "url-join": "^4.0.1",
    "uuid": "^8.3.2",
    "why-is-node-running": "^2.2.0",
    "winston": "^3.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/grucloud/grucloud"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/cli/cliEntry.js",
      "src/**/*.spec.js",
      "src/**/*test*.js",
      "src/**/test/*.js",
      "src/**/test/config/*.js",
      "src/cli/test/infra/*.js",
      "src/mockServer/MockServerRun.js",
      "src/mockServer/config.js"
    ],
    "extension": [
      ".js"
    ],
    "reporter": [
      "html",
      "text",
      "text-summary"
    ],
    "all": true
  },
  "np": {
    "yarn": false,
    "branch": "main"
  }
}
