    "aws",
    "azure",
    "gcp"
  ],
  "author": "Frederic Heem",
  "license": "ISC",
  "devDependencies": {
    "@koa/router": "*",
    "jscpd": "^3.3.23",
    "koa": "^2.13.1",
    "koa-body": "^4.2.0",
    "mocha": "^8.2.1",
    "mocha-junit-reporter": "^2.0.0",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "axios-mock-adapter": "^1.19.0",
    "bluebird": "^3.7.2",
    "change-case": "^4.1.2",
    "cli-table3": "^0.6.0",
    "colors": "^1.4.0",
    "commander": "^7.0.0",
    "deep-object-diff": "^1.1.0",
    "duration": "^0.2.2",
