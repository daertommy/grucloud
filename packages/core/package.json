{
  "name": "@grucloud/core",
  "version": "1.10.22",
  "description": "Infrastructure as Code",
  "public": true,
  "main": "index.js",
  "bin": {
    "gc": "./cli/cliEntry.js"
  },
  "homepage": "https://www.grucloud.com",
  "scripts": {
    "test:mock": "NODE_PATH=. mocha  './cli/**/*.test.js'  './test/**/*.test.js'  './mockServer/test/*.test.js'",
